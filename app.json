{
  "expo": {
    "name": "CoughCare",
    "slug": "coughcare",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./public/logo.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./public/logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#158B95"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.coughcare.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./public/logo.png",
        "backgroundColor": "#158B95"
      },
      "package": "com.coughcare.app",
      "permissions": [
        "RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./public/logo.png"
    },
    "plugins": [
      [
        "expo-av",
        {
          "microphonePermission": "Allow CoughCare to access your microphone to record cough sounds."
        }
      ]
    ],
    "extra": {
      "apiBaseUrl": "http://localhost:5001",
      "logoVersion": "1",
      "logoAlt": "AI Cough Screening Assistant"
    }
  }
}

